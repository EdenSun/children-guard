<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="eden.sun.childrenguard.activity.ModifyLockPasswordActivity" >
    
 	<TextView
 	    android:id="@+id/titleTextView"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:text="@string/modifyLockPassword.title"
 	    style="@style/commonPageTitle"
 	    />

    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:hint="@string/modifyLockPassword.passwordHint"
            android:id="@+id/passwordEditText"
            android:layout_below="@+id/titleTextView"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:textColor="#000000"/>
    <Button
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="@string/modifyLockPassword.cancelBtn"
            android:id="@+id/cancelBtn"
            android:textSize="13dp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/okBtn"
            android:layout_alignParentRight="true"/>
    <Button
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:text="@string/modifyLockPassword.okBtn"
            android:id="@+id/okBtn"
            android:layout_below="@+id/pword"
            android:layout_marginTop="10dp"
            android:textSize="13dp"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/cancelBtn"/>
    <TextView
        android:id="@+id/passwordTextView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/passwordEditText"
        android:layout_toLeftOf="@+id/passwordEditText"
        android:text="@string/modifyLockPassword.passwordTextView"
        android:textColor="#fff"
        android:textSize="15dp" 
        android:gravity="center_vertical"/>

    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pword"
            android:hint="Password"
            android:layout_below="@+id/passwordEditText"
            android:layout_alignLeft="@+id/passwordEditText"
            android:textSize="15dp"
            android:textColor="#000000"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/modifyLockPassword.confirmPasswordTextView"
            android:id="@+id/passwordConfirmTextView"
            android:layout_alignBottom="@+id/pword"
            android:layout_alignRight="@+id/passwordTextView"
            android:textSize="15dp"
            android:textColor="#fff"
            android:gravity="center_vertical"/>

</RelativeLayout>

