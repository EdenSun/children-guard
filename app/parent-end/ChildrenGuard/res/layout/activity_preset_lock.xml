<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/commonPageStyle"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context="eden.sun.childrenguard.activity.PresetLockActivity">
    
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1">
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >
	
	        <LinearLayout
	            android:id="@+id/startTimeItem"
	            style="@style/presetLockItemStyle"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" 
	            android:background="@drawable/list_selector"
	            android:clickable="true"
	            >
	
	            <TextView
	                style="@style/label"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Start Time" 
	                android:layout_marginBottom="2dp"/>
	
	            <TextView
	                android:id="@+id/startTimeTextView"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="@string/default_text_perset_lock_start_time"
	                android:textColor="@color/text_gray" />
	        </LinearLayout>
	        
	        
	        <LinearLayout
	            android:id="@+id/endTimeItem"
	            style="@style/presetLockItemStyle"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" 
	            android:background="@drawable/list_selector"
	            android:clickable="true">
	
	            <TextView
	                style="@style/label"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="End Time" 
	                android:layout_marginBottom="2dp"/>
	
	            <TextView
	                android:id="@+id/endTimeTextView"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="@string/default_text_perset_lock_end_time"
	                android:textColor="@color/text_gray" />
	        </LinearLayout>
	        
	        <LinearLayout
	            android:id="@+id/repeatItem"
	            style="@style/presetLockItemStyle"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" 
	            android:background="@drawable/list_selector"
	            android:clickable="true">
	
	            <TextView
	                style="@style/label"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Repeat" 
	                android:layout_marginBottom="2dp"/>
	
	            <TextView
	                android:id="@+id/repeatTextView"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="@string/default_text_perset_lock_repeat"
	                android:textColor="@color/text_gray" />
	        </LinearLayout>
	        
	        <LinearLayout
	            android:id="@+id/lockAppSettingItem"
	            style="@style/presetLockItemStyle"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical" 
	            android:background="@drawable/list_selector"
	            android:clickable="true">
	
	            <TextView
	                style="@style/label"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Lock App Setting" 
	                android:layout_marginBottom="2dp"/>
	
	            <TextView
	                android:id="@+id/lockAppSettingTextView"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="@string/default_text_perset_lock_lock_app_setting"
	                android:textColor="@color/text_gray" />
	        </LinearLayout>
	        
	        <LinearLayout
	            android:id="@+id/lockCallsItem"
	            style="@style/presetLockItemStyle"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal" >
	
	            <TextView
	                style="@style/label"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:text="Lock Outgoing Calls" 
	                android:layout_marginBottom="2dp"/>
	
	            <org.jraf.android.backport.switchwidget.Switch
	        android:id="@+id/lockCallSwitch"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_marginEnd="5dp"
	    android:layout_marginRight="5dp"
	    android:layout_weight="0"/>
	        </LinearLayout>
	        
	    </LinearLayout>
	</ScrollView>
	<LinearLayout 
	    android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#647b97"
        >
	    
	    <Button
	            android:id="@+id/applyBtn"
	            android:layout_weight="1"
	            android:text="Apply"
				android:layout_marginRight="5dp"
	            style="@style/commonBtn"
	            />
	    
        <Button
	        android:id="@+id/cancelBtn"
	        android:text="Cancel"
	        android:layout_weight="1"
	        android:layout_marginLeft="5dp"
	        style="@style/commonBtn"/>
	
	    
	</LinearLayout>
</LinearLayout>