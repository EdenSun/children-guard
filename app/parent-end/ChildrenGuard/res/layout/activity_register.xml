<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/commonPageStyle"
    tools:context="eden.sun.childrenguard.activity.RegisterActivity" >

    <TextView
        android:id="@+id/titleTextView"
        android:text="Register to Children Guard"
        style="@style/commonPageTitle"
        />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
		    <EditText
		            android:id="@+id/mobileEditText"
		            android:inputType="phone"
		            android:hint="Mobile"
		            style="@style/textOnLeftInputStyle"
		            />
		
		    <EditText
		            android:id="@+id/passwordEditText"
		            android:inputType="numberPassword"
		            android:maxLength="4"
		            android:hint="Password"
		            style="@style/textOnLeftInputStyle"
		            />
	    
		    <EditText
		            android:id="@+id/confirmPasswordEditText"
		            android:inputType="numberPassword"
		            android:maxLength="4"
		            android:hint="Confirm Password"
		            style="@style/textOnLeftInputStyle"
		            />
	</LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >
	    
	    <Button
	            android:id="@+id/backBtn"
	            android:layout_weight="1"
	            android:text="Back To Login"
				android:layout_marginRight="5dp"
	            style="@style/commonBtn"
	            />
	    
        <Button
	        android:id="@+id/registerBtn"
	        android:text="Register"
	        android:layout_weight="1"
	        android:layout_marginLeft="5dp"
	        style="@style/commonBtn"/>
	
	    
	</LinearLayout>
    
</LinearLayout>
