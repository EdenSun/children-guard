<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        >
        <LinearLayout 
            android:id="@+id/infoTab"
            android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    android:gravity="center"
		    >
            <ImageView 
                android:id="@+id/infoTabImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_icon_child_basic_info_selected"/>
            <TextView 
                android:id="@+id/infoTabText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textColor="@color/tab_text_selected"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/controlTab"
            android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    android:gravity="center"
		    >
            <ImageView 
                android:id="@+id/controlTabImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_icon_child_app_manage_normal"/>
            <TextView 
                android:id="@+id/controlTabText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Control"
                android:textColor="@color/tab_text"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/scheduleTab"
            android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    android:gravity="center"
		    >
            <ImageView 
                android:id="@+id/scheduleTabImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_icon_child_app_manage_normal"/>
            <TextView 
                android:id="@+id/scheduleTabText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textColor="@color/tab_text"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/settingTab"
            android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    android:gravity="center"
		    >
            <ImageView 
                android:id="@+id/settingTabImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_icon_more_normal"
                />
            <TextView 
                android:id="@+id/settingTabText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:textColor="@color/tab_text"
                />
        </LinearLayout>
	    
    </LinearLayout>