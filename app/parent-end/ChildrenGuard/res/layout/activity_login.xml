<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/commonPageStyle"
    tools:context="com.soloappinfo.activity.LoginActivity">

    <TextView
        android:id="@+id/registerLinkBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right"
        style="@style/rightLinkStyle"
        android:text="Register"/>
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:orientation="vertical" 
	    android:layout_marginBottom="20dp"
	    android:layout_marginTop="20dp">

	    <ImageView
	        android:layout_width="80dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:src="@drawable/background_logo" />
	</LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:layout_weight="0">
	
	        <EditText
	            android:id="@+id/mobileEditText"
	            android:inputType="phone"
	            android:maxLength="10"
	            android:layout_weight="1"
	            android:hint="Mobile"
	            android:layout_marginBottom="5dp"
	            style="@style/commonInputStyle" />
	
	        <EditText
	            android:id="@+id/passwordEditText"
	            android:layout_weight="1"
	            android:hint="Password"
	            android:inputType="numberPassword"
	            android:maxLength="4"
	            style="@style/commonInputStyle" />
	    </LinearLayout>
	
    	<TextView
	        android:id="@+id/forgotYourPasswordLinkBtn"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        style="@style/centerLinkStyle"
	        android:text="Forgot your Password?" 
	        android:textColor="#777777"
	        android:layout_marginTop="20dp"
	        />

    	<Button
    	    android:id="@+id/loginBtn"
    	    style="@style/commonBtn"
    	    android:layout_marginBottom="35dp"
    	    android:text="Login" />
    	
</LinearLayout>